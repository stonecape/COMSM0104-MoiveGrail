<script type="text/javascript">
    function sortChange() {
        var sort_opt = $("#sortSelect").val();
        window.location.href="?sort_opt="+sort_opt;
    }

</script>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class=""></li>
        <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="2" class=""></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item">
            <img class="first-slide"
                 src="/images/background/1.png"
                 alt="First slide">

        </div>
        <div class="item active">
            <img class="second-slide"
                 src="/images/background/2.png"
                 alt="Second slide">

        </div>
        <div class="item">
            <img class="third-slide"
                 src="/images/background/4.png"
                 alt="Third slide">

        </div>
        <div class="big-title">
            <h1>Love life, love movie.</h1>
        </div>
        <div class="form-group search">
            <input type="text" id="carousel-search-box"  placeholder="Find your movies" class="form-control">
            <button class="search-input-button" onclick="javascript:doSearch('carousel')">
                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            </button>
        </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div class="container marketing">
    <select id="sortSelect" class="form-control sort_select" onchange="javascript:sortChange()">
        {{#select sort_opt}}
            <option value="0">Newest</option>
            <option value="1">Top rated</option>
            <option value="2">Most commented</option>
        {{/select}}
    </select>
    <hr>
    <!-- Three columns of text below the carousel -->
    <div class="row">
    {{#if recommend}}
        {{#each recommend}}
        <div class="col-lg-4 home_movielist">
            <img class="img-circle"
                 src="/images/movie_poster/{{movie_id}}.png"
                 alt="Generic placeholder image" width="140" height="140">
            <h2>{{title}}</h2>
            <p>{{introduction}}</p>
            <p><a class="btn btn-default" href="/mdetail?id={{movie_id}}" role="button">View details Â»</a></p>
        </div><!-- /.col-lg-4 -->
        {{/each}}
    {{/if}}

    </div><!-- /.row -->



</div>